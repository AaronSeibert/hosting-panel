<%= render partial: 'global/forms/modal_header', locals: {:title => "Add New Category"} %>
<%= form_for(@service_category, :remote => true, :html => {:class => "form-horizontal", :role => "form"}) do |f| %> 
<div class="modal-body">
  <div id="form-errors">
    <%= modal_flash(@service_category, "service_category") %>
  </div>
  
  <div class="form-group">
    <%= f.label :name, "Name", :class => "col-lg-2 control-label" %>
    <div class="col-lg-6">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

<%= render partial: "global/forms/modal_footer", locals: { :f => f } %>
<% end %>
