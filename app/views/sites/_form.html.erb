<%= form_for([@client, @site], html: { :class => "form-horizontal", :role => "form" }) do |f| %>
  
<div class="modal-body">
  <div class="form-group">
    <%= f.label :client, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= @client.name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :description %>
    </div>
  </div>
</div>
<%= render partial: "global/forms/modal_footer", locals: { :f => f } %>
<% end %>
