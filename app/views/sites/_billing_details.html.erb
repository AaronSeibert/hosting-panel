<fieldset>
  <legend>Billing Details</legend>
  <div class="form-group">
    <%= label_tag 'price', nil, :class => "col-lg-3 control-label" %>
    <div class="col-lg-2">
      <p class="form-control-static" id="price">$0.00</p>
    </div>
    <%= label_tag 'next_bill_date', nil, :class => "col-lg-3 control-label" %>
    <div class="col-lg-4">
      <p class="form-control-static" id="next_bill_date">Jan. 1, 2000</p>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag 'prorated_charge', nil, :class => "col-lg-5 control-label" %>
    <div class="col-lg-2">
      <p class="form-control-static" id="prorated_charge">$0.00</p>
    </div>
    <div class="col-lg-5">
      <p class="form-control-static"> (Billed Immediately)</p>
    </div>
  </div>
</fieldset>
